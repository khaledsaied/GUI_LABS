<Window x:Class="Hull_Speed_Ex3._1_Environment__WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hull Speed - Lab 3" Height="700" Width="1024">

    <ScrollViewer >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Content="Vis Environment"
                    Grid.Row="0"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="Auto" 
                    Click="Button_Click_1" 
                    FontSize="18"/>

            <TextBlock Margin="10" 
                       Grid.Row="1" 
                       Name="txtBlock" 
                       TextWrapping="NoWrap" 
                       FontSize="18" />
        </Grid>
    </ScrollViewer>

</Window>
