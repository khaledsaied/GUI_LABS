<Window x:Class="Part_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" 
               Content="Id" 
               VerticalAlignment="Center" 
               Margin="0,10,0,0"
               />
        <TextBox Margin="0,10,0,0"
                 VerticalAlignment="Center"
                 Name="NameId"
                 Grid.Row="0" 
                 Grid.Column="1"
                 Text="{Binding Path=ID}"
                 />
        <TextBlock Grid.Row="0"
                   Grid.Column="2" 
                   Margin="10"
                   Name="tblID"
                   Text="{Binding Path=ID}"
                   />
        <Label Grid.Row="1" 
                   Name="lblCodeName"
                   Content="CodeName" 
                   Margin="0,10,0,0"
                   />
        <TextBox Grid.Row="1" 
                 Grid.Column="1" 
                 VerticalAlignment="Center" 
                 Margin="0,10,0,0"
                 Name="tbxCodeName"
                 Text="{Binding Path=CodeName}"
                 />
        <TextBlock Grid.Row="1"
                   Grid.Column="2" 
                   Margin="10"
                   Name="tblCodeName"
                   Text="{Binding Path=CodeName}"
                   />
        <Label Grid.Row="2" 
               Content="Speciality"
               Margin="0,10,0,0"
               />
        <TextBox Margin="0,10,0,0"
                 Grid.Row="2" 
                 Grid.Column="1" 
                 VerticalAlignment="Center" 
                 Name="tbxSpeciality"
                 Text="{Binding Path=Speciality}"
                 />
        <TextBlock Grid.Row="2"
                   Grid.Column="2" 
                   Margin="10"
                   Name="tblSpeciality"
                   Text="{Binding Path=Speciality}"
                   />
        <Label Grid.Row="3" 
               Content="Assignment"
               Margin="0,10,0,0"
               />
        <TextBox Grid.Row="3" 
                 Grid.Column="1" 
                 VerticalAlignment="Center" 
                 MinHeight="70"
                 Name="tbxAssignment"
                 Margin="0,10,0,0"
                 Text="{Binding ElementName=tblAssignment, 
                                Path=Assignment, 
                                UpdateSourceTrigger=PropertyChanged, 
                                Mode=TwoWay}" TextChanged="tbxAssignment_TextChanged" 
                 />
        <TextBlock Grid.Row="3"
                   Grid.Column="2" 
                   Margin="10"
                   Name="tblAssignment"
                   Text="{Binding Assignment}"
                   />
    </Grid>
</Window>

