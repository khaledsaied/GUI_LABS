<Window x:Class="Hull_Speed_Ex3._1_StackPanel__WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="Panel Layout - StackPanel" Height="350" Width="525" ResizeMode="NoResize">
    <StackPanel Orientation="Horizontal" >
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Name:"/>
                <TextBox Name="nameBox" Margin="0,3,0,0" Width="242" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label  Content="Length:"/>
                <TextBox Name="lengthBox" Margin="0,5,0,5" Width="100" TextWrapping="Wrap" />
                <Label Content="feet"/>
            </StackPanel>

            <StackPanel>
                <Button FontWeight="Bold" HorizontalAlignment="Center"  Content="Calculate Hull Speed" Click="Button_Click_1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Hull Speed:"/>
                <Label Name="hullSpeed" Width="Auto" Margin="0,0,15,0"/>
                <Label Content="knots"/>
            </StackPanel>

        </StackPanel>
        <StackPanel HorizontalAlignment="Left">
            <Image Source="03-Sailboat.jpg" Height="316" Width="242" />
        </StackPanel>

    </StackPanel>
</Window>
